

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String   @id @default(uuid()) // UUID primary key
  email    String   @unique
  name     String?
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apiCalls ApiCall[] // One-to-many relation
}

model ApiCall {
  id          String   @id @default(uuid()) // UUID primary key
  name        String
  description String?
  method      String
  url         String
  headers     Json?    // Array of objects: [{ key, value, enabled }]
  body        String?  // Raw body as string
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String   // Foreign key (UUID)
  user        User     @relation(fields: [userId], references: [id])
}